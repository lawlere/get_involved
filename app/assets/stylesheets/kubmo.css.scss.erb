/* Smartphones (portrait and landscape) ----------- */
@media only screen 
and (min-device-width : 320px) 
and (max-device-width : 480px) {
/* Styles for all iphones, portrait and landscape */
    body { width: 100%; min-width: 0; } 
    #page_wrapper { width: auto; }

    #get_involved_sidebar { clear: left; float: none; width: 100%; border-radius: 0; -webkit-border-radius: 0; -moz-border-radius: 0; }

    /*---nav---*/
    .top_nav {
        #navbar { height: 70px; }
        .main {
            #nav_logo { margin-left: 10px; margin-top: 10px; }
            a { margin-top: 7px; margin-left: 20px; }
        }
        .sub { margin-left: 65px; margin-top: -16px;
            #donate {
                a { font-size: 93%; margin-right: 20px; padding: 4px; }
            }
        }
        #facebook { margin-top: 8px; }
        #twitter { margin-top: 11px; }
        #mail { margin-top: 11px; }

    }

    /*---logo---*/
    #kubmo_logo_2 { overflow: hidden;
        a { background: transparent url(<%= asset_path 'mobile_bkg_logo.png' %>) no-repeat; background-size: 120px auto; height: 32px; float: left; margin-left: 13px; width: 120px; }
        p { left: 0; float: left; margin-left: 20px; font-size: 80%; line-height: 130%; margin-top: 16px; position: static; width: 150px; }
    }

    /*---homepage---*/
    .home {
        #landing_page { background-repeat: no-repeat; background-size: 420px auto; height: 223px; }
        h2 { font-size: 85%; width: 160px; margin-left: 10px; margin-top: 20px; }
        #click { height: auto; margin-top: 150px; margin-left: 10px; font-size: 77%; padding: 15px; }
        #photo_credit { margin: 8px 0 0 10px; }
    }

    /*---about---*/
    .about { 
        #lifecycle { background: transparent; height: auto; margin: 0 0 15px 10px; width: auto; 
            li { background-position: 0 17px; height: 80px; margin: 10px 0 0;  position: static; width: auto; 
                p { background-size: 77px auto; height: 80px; padding-right: 116px; padding-top: 20px; }
            }
            #us { 
                p { background: transparent url(<%= asset_path 'mobile_lifecycle_1.png' %>) no-repeat top right;  }
            }
            #smartphones { 
                p { background: transparent url(<%= asset_path 'mobile_lifecycle_2.png' %>) no-repeat top right;  }
            }
            #kenya { background-position: 0 21px; 
                p { background: transparent url(<%= asset_path 'mobile_lifecycle_3.png' %>) no-repeat top right;  }
            }
            #companies { background-position: 0 23px; 
                p { background: transparent url(<%= asset_path 'mobile_lifecycle_4.png' %>) no-repeat top right; }
            }
        }
        #story_content { border-top: 0; margin-left: 13px; padding-right: 13px; width: auto; }

    }
        
    @media only screen and (orientation : landscape) {
