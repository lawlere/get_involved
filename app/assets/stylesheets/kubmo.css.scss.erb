/*---Global Styles---*/
/*put all global styles and variables here*/
$pink: #ba1a63;
$grey: #292929;
$light_grey: #414142;
$blue: #a2bcbb;
$purple: #a07098;

/*fonts*/

@mixin lato() { font-family: 'Lato', Arial, sans-serif; font-weight: 400; }
@mixin latoLight() { font-family: 'Lato', Arial, sans-serif; font-weight: 300; }
@mixin latoBold() { font-family: 'Lato', Arial, sans-serif; font-weight: 700; }
@mixin latoBlack() { font-family: 'Lato', Arial, sans-serif; font-weight: 900; }

body { @include lato(); min-width: 917px; }
a { color: $pink; text-decoration: none; }
#page_wrapper { overflow: hidden; width: 917px; }

/*---LOGO---*/
#kubmo_logo_2 {
    position: relative;
    border-bottom: 1px solid $light_grey;
    a {
        display: block;
        margin-left: 60px;
        margin-top: 15px;
        margin-bottom: 15px;
        width: 300px;
        height: 66px;
        background: transparent url('<%= asset_path 'sprite_global.png' %>');
        background-position: 0px;
        text-indent: -9999px;
    }

    p {
        color: #292929;
        position: absolute;
        font-weight: 300;
        font-size: 120%;
        left: 330px;
        top: 26px;
        @include latoLight();
    }
}

/*Get Involved Sidebar*/

#get_involved_sidebar {
    float: right;
    width: 230px;
    background-color: $light_grey;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
    @include latoLight();
    padding-bottom: 17px;
    margin-top: 30px;  
    
    h2 {
        @include latoBold();
        color: white;
        font-size: 120%;
        text-transform: uppercase;
        position: relative;
        padding-top: 10px;
        text-align: center;
    }
    div {
         border-top: 1px solid $blue;
         width: 80%;
         margin: 15px auto 0;
         padding-top: 15px;
    }

    p {
        color: white;
        text-align:center;
        position: relative;
        margin: 0 auto 15px;
        width: 98%;

    }

    a {
        color: white;
    }

    #donate {
        display: block;
        width: 147px;
        padding: 5px;
        background-color: $purple;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        margin: 0 auto;
        text-transform: uppercase;
        font-size: 90%;
    }

    #share { 
        overflow: hidden; 
        width: 46px;
        margin: 0 auto;
        a { 
            float: left;
            width: 18px;
            height: 18px;
            display: block;
            text-indent: -9999px;
        }
    }
    #facebook_about {
        margin-bottom: 0px;
        background: transparent url('<%= asset_path 'sprite_global.png' %>') -50px -8px;
    }

    #twitter_about {
        margin-left: 10px;
       background: transparent url('<%= asset_path 'sprite_global.png' %>') -69px -8px;
    }

    #email_us a {
        padding: 5px;
        background-color: $purple;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        width: 75px;
        text-transform: uppercase;
        font-size: 90%;
        display: block;
        margin: 0 auto;
        text-align: center;
    }

    form input {
        width: 170px;
        height: 25px;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        opacity: 0.5;
        margin: 0 auto;
        display: block;
    }

    form button {
        @include latoLight();
        width: 100px;
        height: 25px;
        font-size: 90%;
        color: white;
        text-transform: uppercase;
        background-color: $purple;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        margin: 14px auto 0;
        display: block;

    }
}


/*Top Navigation Bar*/
.top_nav {
    background-color: $light_grey;
    width: 100%;
	#navbar {
		height: 50px;
        overflow: hidden;
	}
    .main {
        float: left;
        li { 
            float: left; 
        }

        a {
            margin: 17px 0 0 43px;
        }
        #nav_logo {
            background: transparent url('<%= asset_path 'sprite_global.png' %>');
            width: 35px;
            height: 35px;
            text-indent: -9999px;
            margin: 7px 0 0 60px;
        }
    }
    .sub { 
        float: left;
        margin-left: 145px;
        li {
            float: left;
        }
        a {
            margin-right: 20px;
        }
    }


	a {
		color: white;
		text-decoration: none;
        @include latoBlack();
	}

    a:hover,
    a.active {
        color: $pink;
    }

    a:active {
        color: $pink;
    }



	li a {
        display: block;
        background-color: inherit;
        color:  #fff ;
    }



    .social {
        background: url('<%= asset_path 'sprite_global.png' %>') no-repeat;
        display: block;
        text-indent: -9999px;
    }

    #facebook {
        background-position: -50px -8px;
        width: 9px;
        height: 18px;
        margin-top: 16px;
    }

    #twitter {
        background-position: -69px -11px;
        width: 19px;
        height: 14px;
        margin-top: 19px;
    }

    #mail {
        background-position: -100px -12px;
        width: 20px;
        height: 14px;
        margin: 19px 0 0 0;
    }
       
    #donate {
        a {
            font-size: 138%;
            color: white;
            background-color: $pink;
            padding: 8px;
            margin-top: 6px;
            margin-right: 40px;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
        }
        
    }

  
       
   
}

/* ---Landing Page--- */
.home {
    #landing_page {
        background-image: url("/images/landing_page_background.png");
        height: 880px;
        background-position: -20px -25px;
    }

    h2 {
        color: white;
        font-size: 180%;
        font-weight: 300;
        width: 450px;
        margin-left: 60px;
        margin-top: 150px;
        line-height:140%;
        border-top-style:solid;
        border-top-color: #a2bcbb;
        border-top-width: 3px;
        border-bottom-style:solid;
        border-bottom-color: #a2bcbb;
        border-bottom-width: 3px;
        position: absolute;
        padding-top: 8px;
        padding-bottom: 8px;
        @include latoBold();
    }

    #click {

        margin-top: 370px;
        margin-left: 60px;

        background-color: $pink;
        cursor: pointer;
        display: inline-block;
        vertical-align: top;

        -webkit-border-radius: 8px;
        -moz-border-radius: 8px;
        -o-border-radius: 8px;
        border-radius: 8px;

        -webkit-box-shadow: 2px 2px 5px #888;
        -moz-box-shadow: 2px 2px 5px #888;
        -o-box-shadow: 2px 2px 5px #888;
        box-shadow: 2px 2px 5px #888;
      
        -webkit-transition: all 0.5s ease-in-out;
        -moz-transition: all 0.5s ease-in-out;
        -o-transition: all 0.5s ease-in-out;
        transition: all 0.5s ease-in-out;
      
        color: #fff;
        font-size: 120%;
        font-weight: 300;
        height: 35px;
        text-decoration: none;
        padding-left: 20px;
        padding-right: 20px;
        padding-top: 14px;
        text-transform: uppercase;

        @include latoBlack();
    }

    #photo_credit {
        color: white;
        font-size: 80%;
        margin: 20px 0 0 60px;
        
    }
}

